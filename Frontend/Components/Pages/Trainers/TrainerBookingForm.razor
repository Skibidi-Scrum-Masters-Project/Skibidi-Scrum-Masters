@page "/trainer/book/{Id:int}"
@using Microsoft.AspNetCore.Components
@using Microsoft.AspNetCore.Components.Forms
@using FitLifeFitness.Components.Layout
@layout EmptyLayout
<div class="booking-screen">
    @if (Trainer is null)
    {
        <p>Loader træner...</p>
    }
    else
    {
        <h2 class="booking-title">Book @Trainer.Name</h2>
        <p class="booking-subtitle">@Trainer.Speciality</p>

        <div class="booking-trainer-card">
            <div class="booking-avatar">
                @Trainer.Initials
            </div>
            <div class="booking-trainer-info">
                <p class="booking-name">@Trainer.Name</p>
                <p class="booking-experience">@Trainer.Experience</p>
                <p class="booking-focus">@Trainer.FocusAreas</p>
            </div>
        </div>

        <EditForm Model="@Booking" OnValidSubmit="ConfirmBooking">
            <div class="booking-form">
                <div class="booking-field">
                    <label for="date">Dato</label>
                    <InputDate id="date" @bind-Value="Booking.Date" class="booking-input" />
                </div>

                <div class="booking-field">
                    <label for="time">Tid</label>
                    <InputText id="time" @bind-Value="Booking.Time" class="booking-input" placeholder="fx 17:30" />
                </div>

                <div class="booking-field">
                    <label for="note">Kommentar</label>
                    <InputTextArea id="note" @bind-Value="Booking.Note" class="booking-textarea" />
                </div>
            </div>

            <button type="submit" class="primary-btn booking-btn">
                Bekræft booking
            </button>
        </EditForm>

        @if (!string.IsNullOrWhiteSpace(Confirmation))
        {
            <p class="booking-confirmation">@Confirmation</p>
        }
    }
</div>

@code {
    [Parameter] public int Id { get; set; }

    private TrainerModel? Trainer { get; set; }
    private BookingModel Booking { get; set; } = new()
    {
        Date = DateOnly.FromDateTime(DateTime.Today.AddDays(1))
    };

    private string Confirmation { get; set; } = string.Empty;

    protected override void OnParametersSet()
    {
        // Fake lookup – samme data som i BookTrainerList
        var data = new List<TrainerModel>
        {
            new() { Id = 1, Name = "Mikkel Andersen", Speciality = "Styrketræning", Experience = "5 års erfaring", FocusAreas = "Muskelopbygning, teknik" },
            new() { Id = 2, Name = "Emma Larsen", Speciality = "Vægttab & kondition", Experience = "3 års erfaring", FocusAreas = "Fedttab, cardio" },
            new() { Id = 3, Name = "Jonas Pedersen", Speciality = "Crossfit & HIIT", Experience = "4 års erfaring", FocusAreas = "Explosivitet, funktionel træning" },
        };

        Trainer = data.FirstOrDefault(t => t.Id == Id);
    }

    private void ConfirmBooking()
    {
        if (Trainer is null) return;

        // TODO: Send booking til backend
        Confirmation = $"Booking bekræftet med {Trainer.Name} den {Booking.Date:dd/MM/yyyy} kl. {Booking.Time}.";
    }

    public class TrainerModel
    {
        public int Id { get; set; }
        public string Name { get; set; } = "";
        public string Speciality { get; set; } = "";
        public string Experience { get; set; } = "";
        public string FocusAreas { get; set; } = "";

        public string Initials =>
            string.Join("", Name.Split(' ', StringSplitOptions.RemoveEmptyEntries)
                                .Select(x => x[0]))
            .ToUpperInvariant();
    }

    public class BookingModel
    {
        public DateOnly Date { get; set; }
        public string Time { get; set; } = "";
        public string Note { get; set; } = "";
    }
}
