@page "/classes/seat/coach/{ClassId}"
@layout PhoneLayout
@inject FitLifeFitness.Services.ClassService ClassService
@inject FitLifeFitness.Services.TokenService TokenService
@inject NavigationManager Nav
@inject IJSRuntime JS
@using System.Net.Http.Json
@using FitLifeFitness.Components.Layout
@using FitLifeFitness.Models
@using FitlifeFitness.Models
@using Microsoft.AspNetCore.Components

<div class="seatpage">
    <main class="seat-body">
        <section class="seat-shell">

            <div class="seat-header">
                <button class="back-btn" @onclick="GoBack">‚Üê Tilbage</button>
                <div class="coach-pill">Coach view</div>
            </div>

            @if (!string.IsNullOrEmpty(ErrorMessage))
            {
                <div class="coach-error">@ErrorMessage</div>
            }

            <div class="class-info-card">
                <h2 class="class-name">@ClassName</h2>

                <div class="class-details">
                    <div class="detail-item">
                        <span class="detail-icon">üïê</span>
                        <span class="detail-text">@ClassTime</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-icon">‚ö°</span>
                        <span class="detail-text">Intensitet: @Intensity</span>
                    </div>
                    <div class="detail-item">
                        <span class="detail-icon">üìç</span>
                        <span class="detail-text">@BookedCount/@TotalSeats booket</span>
                    </div>
                </div>
            </div>

            <div class="legend">
                <div class="legend-item">
                    <div class="legend-box available"></div>
                    <span>Ledig</span>
                </div>
                <div class="legend-item">
                    <div class="legend-box taken"></div>
                    <span>Optaget</span>
                </div>
            </div>

            <div class="seat-grid">
                @if (SeatRows.Count == 0)
                {
                    <div class="coach-empty">Ingen seatmap data fundet endnu</div>
                }
                else
                {
                    @foreach (var row in SeatRows)
                    {
                        <div class="seat-row">
                            @foreach (var seat in row.Seats)
                            {
                                string seatClass = seat.IsTaken ? "taken" : "available";

                                <button class="seat @seatClass" disabled>
                                    @(seat.Number + 1)
                                </button>
                            }
                        </div>
                    }
                }
            </div>

        </section>
    </main>
</div>

@code {
    [Parameter] public string? ClassId { get; set; }

    private FitnessClass? SelectedClass { get; set; }

    private string ClassName { get; set; } = "Indl√¶ser...";
    private string ClassTime { get; set; } = "Indl√¶ser...";
    private Intensity Intensity { get; set; } = Intensity.Medium;

    private int TotalSeats { get; set; }
    private int BookedCount { get; set; }

    private string ErrorMessage { get; set; } = string.Empty;

    private List<SeatRow> SeatRows { get; set; } = new();
        private string jwt = string.Empty;

    protected override async Task OnInitializedAsync()
    {
        jwt = await TokenService.GetTokenAsync() ?? string.Empty;
        var userId = await TokenService.GetUserIdAsync();
        if (string.IsNullOrEmpty(userId))
        {
            Nav.NavigateTo("/login");
            return;
        }

        await LoadClassAsync();
    }

    private async Task LoadClassAsync()
    {
        if (string.IsNullOrEmpty(ClassId))
        {
            ErrorMessage = "Mangler hold-id.";
            return;
        }

        try
        {
            var response = await ClassService.GetClassByIdAsync(ClassId, jwt);
            if (!response.IsSuccessStatusCode)
            {
                ErrorMessage = "Kunne ikke hente holdet.";
                return;
            }

            SelectedClass = await response.Content.ReadFromJsonAsync<FitnessClass>();
            if (SelectedClass == null)
            {
                ErrorMessage = "Holdet blev ikke fundet.";
                return;
            }

            ClassName = SelectedClass.Name ?? "Ukendt hold";
            Intensity = SelectedClass.Intensity;

            TotalSeats = SelectedClass.MaxCapacity;
            BookedCount = SelectedClass.BookingList?.Count ?? 0;

            ClassTime = FormatClassTime(SelectedClass);

            SeatRows = GenerateSeatsWithFallback(SelectedClass);
        }
        catch (Exception ex)
        {
            ErrorMessage = ex.Message;
        }
    }

    private static string FormatClassTime(FitnessClass c)
    {
        var start = c.StartTime;
        var end = c.StartTime.AddMinutes(c.Duration);
        return $"{start:dd-MM-yyyy HH:mm} - {end:HH:mm}";
    }

    private static List<SeatRow> GenerateSeatsWithFallback(FitnessClass selectedClass)
    {
        int seatsPerRow = 4;

        if (selectedClass.MaxCapacity <= 0)
            return new();

        bool[] taken;

        if (selectedClass.SeatMap != null && selectedClass.SeatMap.Length >= selectedClass.MaxCapacity)
        {
            taken = selectedClass.SeatMap.Take(selectedClass.MaxCapacity).ToArray();
        }
        else
        {
            taken = new bool[selectedClass.MaxCapacity];

            if (selectedClass.BookingList != null)
            {
                foreach (var b in selectedClass.BookingList)
                {
                    if (b.SeatNumber >= 0 && b.SeatNumber < taken.Length)
                        taken[b.SeatNumber] = true;
                }
            }
        }

        int numberOfRows = (int)Math.Ceiling((double)selectedClass.MaxCapacity / seatsPerRow);
        List<SeatRow> rows = new();

        for (int i = 0; i < numberOfRows; i++)
        {
            var row = new SeatRow();

            int seatsInRow = (i == numberOfRows - 1)
                ? (selectedClass.MaxCapacity % seatsPerRow == 0 ? seatsPerRow : selectedClass.MaxCapacity % seatsPerRow)
                : seatsPerRow;

            for (int j = 0; j < seatsInRow; j++)
            {
                int seatIndex = i * seatsPerRow + j;
                if (seatIndex >= selectedClass.MaxCapacity) break;

                row.Seats.Add(new Seat
                {
                    Number = seatIndex,
                    IsTaken = taken[seatIndex]
                });
            }

            rows.Add(row);
        }

        return rows;
    }

    private async Task GoBack()
    {
        await JS.InvokeVoidAsync("eval",
            "if(history.length>1) history.back(); else window.location.href='/classes';");
    }

    public class Seat
    {
        public int Number { get; set; }
        public bool IsTaken { get; set; }
    }

    public class SeatRow
    {
        public List<Seat> Seats { get; set; } = new();
    }
}
